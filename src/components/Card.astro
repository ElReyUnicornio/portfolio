---
interface CardProps {
	title: string;
	description: string;
	image: string;
	className: string;
	href: string;
}

const { title, description, image, className, href } = Astro.props as CardProps;
---

<a href={href} target="_blank" class={`relative flex border border-[#5B5B5B] shadow-lg bg-[#23262d] rounded-md w-full h-full overflow-hidden group ${className}`}>
	<img src={image} alt={title} class="absolute top-0 left-0 w-full h-full z-0 object-cover" />
	<div class="relative w-full h-full z-10 p-4 flex flex-col justify-end bg-gradient-to-b from-transparent to-[#29203F] opacity-0 hover:opacity-100 transition-opacity duration-200 delay-75">
		<h2 class="text-white text-2xl font-bold">{title}</h2>
		<p class="text-white mb-2 text-balance">{description}</p>
		<div class="flex w-full">
			<slot />
		</div>
	</div>
</a>
